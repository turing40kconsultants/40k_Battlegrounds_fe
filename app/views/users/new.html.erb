<h1>Create Account</h1>

<%= form_with url: users_path, method: :post, data: { turbo: false }, local: true do |form| %>
  <p><%= form.label :email, "Email: " %></p>
  <p><%= form.text_field :email %></p>

  <p><%= form.label :password, "Password: " %></p>
  <p><%= form.text_field :password %></p>

  <p><%= form.label :password_digest, "Confirm Password: " %></p>
  <p><%= form.text_field :password_digest %></p>

  <p><%= form.submit 'Create a New Account' %></p>
<% end %>